version: 2
jobs:
  {% for build in builds %}
  "build {{ build['filename'] }}":
    machine:
      enabled: true
    steps:
      - checkout
      - run:
          name: Build container
          command: docker build -t {{ build['tag'] }} dockerfiles/{{ build['filename'] | dirname }}/.
      - run:
          name: Test container
          command: |
            docker run {{ build['tag'] }} python --version
            docker run {{ build['tag'] }} node --version
      - run:
          name: Push container if master
          command: |
            if [ "$CIRCLE_BRANCH" != "master" ]; then
              echo "Not pushing because we're not on master"
              exit 0
            fi

            echo "$DOCKER_HUB_PASSWORD" | docker login --username airhorns --password-stdin
            docker push {{ build['tag'] }}
  {% endfor %}

workflows:
  version: 2
  build:
    jobs:
    {% for build in builds %}
      - "build {{ build['filename'] }}"
    {% endfor %}
